<h1 align = "center"> All Alpha Blogger </h1>
<div align="center">
    <%= @users.each do |user| %>
        <ul class= "listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li> <%= link_to gravatar_for(user), user_path(user) %> </li> <%# image link and goto users show page%>
                    <li class = "article-title">
                        <%= link_to user.username, user_path(user) %>  <%#got to the show page so (user)agr is present%>
                    </li>
                    <li>
                        <small> <%= pluralize(user.alpha_scaffolds.count, "alpha_scaffold") if user.alpha_scaffolds %> </small>
                    </li>
                </div>
            </div>
        </ul>
    <% end %>
</div>


